---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import CommonSvg from "@components/commons/common-svg.astro";
import SousBoisLogo from "@assets/svg/sous-bois-logo.svg?raw";
import SymboleLogo from "@assets/logos/symbole.png";
---

<Layout>
  <section
    class="max-w-screen-md mx-auto h-screen flex flex-col sm:flex-row justify-evenly items-center"
  >
    <article class="place-items-center text-center p-8">
      <CommonSvg
        raw={SousBoisLogo}
        class="h-16 fill-deepBlue dark:fill-bright mb-16"
      />
      <h1 class="uppercase text-lg text-center font-primary mb-4">
        Site en construction
      </h1>
      <div class="border-primary dark:bg-bright w-24 h-[1px] mb-4 rounded-full">
      </div>
      <a
        class="font-secondary text-secondary text-sm hover:text-deepBlue underline"
        href="mailto:lbonnevie@sous-bois.fr">lbonnevie@sous-bois.fr</a
      >
    </article>
    <div class="flex flex-col items-center justify-center px-16">
      <Image src={SymboleLogo} alt="Sous-boie logo" class="object-cover w-56" />
    </div>
  </section>
</Layout>
